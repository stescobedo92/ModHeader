{
  "name": "modheader",
  "version": "1.0.0",
  "description": "HTTP proxy server to add, modify and remove HTTP request/response headers on the fly",
  "main": "src/index.js",
  "bin": {
    "modheader": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "http",
    "proxy",
    "headers",
    "middleware",
    "testing",
    "authentication",
    "header-manipulation",
    "http-proxy",
    "debugging",
    "development-tools"
  ],
  "author": "stescobedo92",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stescobedo92/ModHeader.git"
  },
  "bugs": {
    "url": "https://github.com/stescobedo92/ModHeader/issues"
  },
  "homepage": "https://github.com/stescobedo92/ModHeader#readme",
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
